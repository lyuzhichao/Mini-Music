/* components/ranking-area-item/index.wxss */
.item {
    display: flex;
    background:rgba(235, 235, 235, 0.5);
    border-radius: 12rpx;
    margin-bottom: 15rpx;
}

.info {
    flex:1;
    padding-left: 15rpx;
}
.info .name {
    font-weight: 700;
    font-size: 32rpx;
    padding-top: 15rpx;
}

.info .song-info {
    display: flex;
    font-size: 24rpx;
    margin-top: 15rpx;
    text-overflow: ellipsis;
    word-wrap:break-word;
    white-space:nowrap;
    overflow: hidden;
}

.info .song-info .artist-name {
    color: gray;
}
.song-index {
    padding-right: 10rpx;
}
.seperator {
    padding-left: 10rpx;
    padding-right: 10rpx;
}
.image {
    width: 220rpx;
    border-radius: 12rpx;
    display: block;
}
.image-info {
    position: relative;
    padding: 0;
}
.image-info .play-count {
    position:absolute;
    bottom: 0;
    right: 0;
    padding: 0 10rpx;
    color: white;
    background:rgba(235, 235, 235, 0.5);
    border-radius: 12rpx;
    font-size: 24rpx;
}