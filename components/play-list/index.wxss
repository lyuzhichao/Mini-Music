.item {
    display: flex;
    height: 20px;
    line-height: 20px;
    padding: 15rpx 0;
}
.item .icon .image{
    width: 42rpx;
}
.item .info {
    display: flex;
    float: 1;
    font-size: 28rpx;
    /* padding-left: 10rpx; */
    white-space: nowrap;
    word-break: break-all;
    word-wrap:break-word;
    overflow: hidden;
    text-overflow: ellipsis;
}
.sep {
    padding: 0 10rpx;
    color: lightgray;
}
.artist {
    color: lightgray;
}
