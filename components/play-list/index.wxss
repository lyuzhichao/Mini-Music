/* components/play-list/index.wxss */
.scroll-view {
    /* position: relative; */
    height: 450px;
    width: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;
    overflow: hidden;
    background-color: white;
    border-radius: 12rpx;
    box-shadow: 0 -1px 5px rgba(0,0,0,0.2);
}

.scroll-view .current-play {
    width: 96%;
    position: fixed;
    display: flex;
    padding:15rpx 0;
    align-items: baseline;
    background-color: white;
    border-radius: 20rpx;
}
.current-play .play-title {
    font-size: 34rpx;
    font-weight: 550;
    color: black;
}
.current-play .song-number {
    font-size: 28rpx;
    color: lightgray;
    padding-left: 10rpx;
}

.play-list {
    padding-top: 40px;
}
